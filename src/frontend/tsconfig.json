{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",

    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "module": "ESNext",
    "moduleResolution": "Node",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,

    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },

    "types": ["vite/client", "node"]
  },
  "include": ["src"]
}

